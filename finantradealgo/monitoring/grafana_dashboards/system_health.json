{
  "title": "FinanTrade - System Health",
  "uid": "finantrade-system-health",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "API Requests (rate)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(finantrade_api_requests_total[5m]))",
          "legendFormat": "requests/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Latency (ms)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(finantrade_api_latency_ms_bucket[5m])) by (le))",
          "legendFormat": "p95 latency"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Errors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(finantrade_api_requests_total{status_code=~\"5..\"}[5m]))",
          "legendFormat": "5xx errors"
        }
      ]
    }
  ]
}
